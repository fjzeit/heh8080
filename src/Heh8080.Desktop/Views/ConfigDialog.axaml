<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Heh8080.Views.ConfigDialog"
        Title="FJM-3A Configuration"
        Width="420"
        SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="#0A140A"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="BorderOnly">

    <Border BorderBrush="#33FF33" BorderThickness="2" CornerRadius="4">
        <StackPanel Margin="24" Spacing="16">
            <!-- Title Bar -->
            <DockPanel Margin="0,0,0,8">
                <Button DockPanel.Dock="Right" Content="X" Click="Close_Click"
                        Background="Transparent" Foreground="#33FF33"
                        BorderThickness="0" FontFamily="Consolas,monospace"
                        Padding="8,4" FontSize="14" FontWeight="Bold"/>
                <TextBlock Text="FJM-3A Configuration"
                           FontSize="18" FontWeight="Bold"
                           Foreground="#33FF33"
                           FontFamily="Consolas,monospace"
                           VerticalAlignment="Center"/>
            </DockPanel>

            <Rectangle Height="1" Fill="#33FF33" Opacity="0.3"/>

            <!-- Disk Drives Section -->
            <TextBlock Text="DISK DRIVES" FontWeight="Bold" Foreground="#33FF33"
                       FontFamily="Consolas,monospace" FontSize="12"/>

            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="40,*,70,70"
                  Margin="8,0,0,0">
                <Grid.Styles>
                    <Style Selector="TextBlock">
                        <Setter Property="FontFamily" Value="Consolas,monospace"/>
                        <Setter Property="Foreground" Value="#33FF33"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                    <Style Selector="Button">
                        <Setter Property="Background" Value="#1A2A1A"/>
                        <Setter Property="Foreground" Value="#33FF33"/>
                        <Setter Property="BorderBrush" Value="#33FF33"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="FontFamily" Value="Consolas,monospace"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="CornerRadius" Value="2"/>
                    </Style>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#2A3A2A"/>
                    </Style>
                </Grid.Styles>

                <!-- Drive A: -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="A:"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DriveALabel" Text="(empty)"
                           Opacity="0.6" Margin="8,0" TextTrimming="CharacterEllipsis"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Mount" Click="MountA_Click" Margin="2"/>
                <Button Grid.Row="0" Grid.Column="3" Content="Eject" Click="UnmountA_Click" Margin="2"/>

                <!-- Drive B: -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="B:" Margin="0,8,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DriveBLabel" Text="(empty)"
                           Opacity="0.6" Margin="8,8,0,0" TextTrimming="CharacterEllipsis"/>
                <Button Grid.Row="1" Grid.Column="2" Content="Mount" Click="MountB_Click" Margin="2,8,2,0"/>
                <Button Grid.Row="1" Grid.Column="3" Content="Eject" Click="UnmountB_Click" Margin="2,8,2,0"/>

                <!-- Drive C: -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="C:" Margin="0,8,0,0"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DriveCLabel" Text="(empty)"
                           Opacity="0.6" Margin="8,8,0,0" TextTrimming="CharacterEllipsis"/>
                <Button Grid.Row="2" Grid.Column="2" Content="Mount" Click="MountC_Click" Margin="2,8,2,0"/>
                <Button Grid.Row="2" Grid.Column="3" Content="Eject" Click="UnmountC_Click" Margin="2,8,2,0"/>

                <!-- Drive D: -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="D:" Margin="0,8,0,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DriveDLabel" Text="(empty)"
                           Opacity="0.6" Margin="8,8,0,0" TextTrimming="CharacterEllipsis"/>
                <Button Grid.Row="3" Grid.Column="2" Content="Mount" Click="MountD_Click" Margin="2,8,2,0"/>
                <Button Grid.Row="3" Grid.Column="3" Content="Eject" Click="UnmountD_Click" Margin="2,8,2,0"/>
            </Grid>

            <Rectangle Height="1" Fill="#33FF33" Opacity="0.3" Margin="0,8,0,0"/>

            <!-- System Section -->
            <TextBlock Text="SYSTEM" FontWeight="Bold" Foreground="#33FF33"
                       FontFamily="Consolas,monospace" FontSize="12"/>

            <StackPanel Orientation="Horizontal" Spacing="12" Margin="8,0,0,0">
                <Button Content="Reset CPU" Click="Reset_Click"
                        Background="#1A2A1A" Foreground="#33FF33"
                        BorderBrush="#33FF33" BorderThickness="1"
                        FontFamily="Consolas,monospace" FontSize="11"
                        Padding="12,6" CornerRadius="2"/>
                <TextBlock Text="Warm boot from A:" Foreground="#33FF33"
                           FontFamily="Consolas,monospace" FontSize="11"
                           Opacity="0.6" VerticalAlignment="Center"/>
            </StackPanel>

            <Rectangle Height="1" Fill="#33FF33" Opacity="0.3" Margin="0,8,0,0"/>

            <!-- Status -->
            <TextBlock x:Name="StatusLabel" Text="" Foreground="#33FF33"
                       FontFamily="Consolas,monospace" FontSize="11"
                       MinHeight="16"/>

            <!-- About -->
            <StackPanel Opacity="0.5" Margin="0,8,0,0">
                <TextBlock Text="heh8080 - Intel 8080 Emulator"
                           Foreground="#33FF33" FontFamily="Consolas,monospace"
                           FontSize="10" HorizontalAlignment="Center"/>
                <TextBlock Text="github.com/fjzeit/heh8080"
                           Foreground="#33FF33" FontFamily="Consolas,monospace"
                           FontSize="10" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
